{{#extends "base"}}

{{#block "content"}}
<h1>Update Recipe</h1>
<form method="POST">
    <div class="mt-3">
        <label>Title</label>
        <input type="text" name="title" class="form-control"
            value="{{recipe.title}}" />
    </div>
    <div class="mt-3">
        <label>Ingredients</label>
        <input type="text" name="ingredients" class="form-control"
            value="{{recipe.ingredients}}" />
    </div>
    <input type="submit" class="btn btn-primary mt-3" />
</form>
{{/block}}

{{/extends}}